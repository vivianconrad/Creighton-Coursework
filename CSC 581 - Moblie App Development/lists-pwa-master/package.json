{
  "name": "lists-pwa",
  "version": "1.0.0",
  "description": "A lists PWA built with React and Firebase",
  "main": "index.js",
  "scripts": {
    "clean": "rm dist/bundle.js",
    "start": "parcel public/index.html",
    "build": "parcel build public/index.html --out-dir build --no-source-maps --no-content-hash",
    "deploy": "npm run build && firebase deploy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ovieokeh/lists-pwa.git"
  },
  "keywords": [
    "firebase",
    "pwa",
    "react"
  ],
  "author": "Ovie Okeh",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/ovieokeh/lists-pwa/issues"
  },
  "homepage": "https://github.com/ovieokeh/lists-pwa#readme",
  "dependencies": {
    "firebase": "^7.0.0",
    "react": "^16.10.1",
    "react-dom": "^16.10.1"
  },
  "devDependencies": {
    "less": "^3.10.3",
    "parcel-bundler": "^1.12.3",
    "prettier": "^1.18.2"
  }
}
